{
  "name": "@collegeproject/monorepo",
  "private": true,
  "workspaces": [
    "client/*",
    "server/*",
    "shared/*"
  ],
  "scripts": {
    "dev:client": "turbo run dev -w ./client",
    "dev:server": "turbo run dev -w ./server",
    "build": "turbo run build -w ./shared && turbo run build -w ./client && turbo run build -w ./server",
    "build:client": "turbo run build -w ./client",
    "build:server": "turbo run build -w ./server",
    "build:shared": "turbo run build -w ./shared",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "turbo": "^2.5.6"
  }
}
